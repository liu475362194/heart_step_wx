.shebei-head{
  background-color: #0a528b;
  height: 38px;
  position: relative;
  top: 20px;
}
.shebei-head text{
  color: #106fba;
  font-weight: bold;
  font-family: "黑体";
  position: absolute;
  top: 8px;
  left: 10px;
}
