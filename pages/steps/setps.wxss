page {
  background-color: #012847;
  height: 98%;
  position: absolute;
}

.scroll {
  height: 100%;
}

.chart {
  width: 100%;
  height: 170px;
  position: relative;
  top: 300px;
  /*background-color: #f0f;*/
}

.chart_canvas {
  width: 100%;
  height: 170px;
}

.head {
  width: 100%;
}

.connect_image {
  position: absolute;
  top: 15px;
  left: 15px;
  width: 25px;
  height: 25px;
}

.steps {
  position: absolute;
  top: 50px;
  /*background-color: #fff;*/
  width: 100%;
  height: 200px;
  text-align: center;
}

.steps_image {
  width: 55%;
  height: 200px;
}

.steps_content {
  color: #fff;
  display: block;
  position: absolute;
  top: 80px;
  left: 50%;
}

.steps_text {
  font-size: 25px;
  font-weight: bold;
  position: relative;
  top: 5px;
  right: 40px;
}

.da_steps {
  width: 25px;
  height: 25px;
  position: absolute;
  left: 13px;
  top: -5px;
}

.xiao_steps {
  width: 20px;
  height: 20px;
  position: absolute;
  left: 15px;
  top: -2px;
}

.steps_cimeifen {
  font-size: 16px;
  width: 50px;
  position: absolute;
  top: 25px;
  left: 0px;
}

.steps_list {
  width: 90%;
  height: 200px;
  position: absolute;
  left: 5%;
  top: 300px;
}

.steps_sport_mileage {
  width: 40%;
  height: 100px;
}

.steps_sport_calorie {
  width: 40%;
  height: 100px;
  position: absolute;
  left: 55%;
  top: 0px;
}

.steps_sport_time {
  width: 40%;
  height: 100px;
  position: absolute;
  left: 0%;
  top: 80px;
}

.steps_sport_speed {
  width: 40%;
  height: 100px;
  position: absolute;
  left: 55%;
  top: 80px;
}

.steps_item_image {
  height: 24px;
  width: 24px;
  position: absolute;
  top: 5px;
}

.steps_item_text {
  margin-left: 8px;
  font-size: 18px;
  color: #044889;
  font-weight: bold;
  font-family: "黑体";
  position: absolute;
  left: 15px;
  top: 2px;
}

.steps_item_value {
  font-size: 20px;
  color: #fff;
  font-weight: bolder;
  font-family: "黑体";
  position: absolute;
  top: 28px;
  left: 3px;
}

.steps_item_unit {
  font-size: 16px;
  color: #fff;
  font-weight: bold;
  font-family: "黑体";
  position: absolute;
  top: 30px;
  left: 50px;
}

.sport {
  width: 100%;
  height: 12%;
  position: absolute;
  top: 88%;
  text-align: center;
}

